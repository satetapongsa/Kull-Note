# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB - ใช้ MongoDB Atlas หรือ local MongoDB
MONGODB_URI=mongodb://localhost:27017/webnote
# หรือใช้ Atlas: mongodb+srv://username:password@cluster.mongodb.net/webnote

# Session Secret - เปลี่ยนเป็น random string ที่ยาวกว่านี้
SESSION_SECRET=your-super-secret-session-key-change-this

# Google OAuth - ไปสร้างที่ https://console.cloud.google.com
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Frontend URL
CLIENT_URL=http://localhost:5173
